{
  "compilerOptions": {
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["es5", "es6"],
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "outDir": "dist",
    "resolveJsonModule": true,
    "sourceMap": true,
    "strict": true,
    "target": "es5"
  },
  "exclude": ["node_modules", "scripts/*", "scripts/**/*.ts"],
  "include": [
    "artifacts/**/*",
    "artifacts/**/*.json",
    // "scripts/**/*.ts",
    "tasks/**/*",
    "test/**/*",
    "types/**/*",
    "hardhat.config.ts",
    "data/abi/*"
  ]
}
